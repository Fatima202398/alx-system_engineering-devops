#!/bin/bash

# Get the values of water and stir from environment variables
water=$water
stir=$stir

# Convert water and stir to base 10 using the "ibase" option of bc
water_10=$(echo "ibase=water; $water" | bc)
stir_10=$(echo "ibase=stir; $stir" | bc)

# Add water_10 and stir_10 using bc and convert the result to base bestc
result=$(echo "obase=bestc; $water_10 + $stir_10" | bc)

# Print the result
echo "The sum of water ($water) and stir ($stir) is: $result"
